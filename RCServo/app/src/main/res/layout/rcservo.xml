<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/channelInfo"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/statusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
            <TextView
                android:id="@+id/attachedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detached"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout4" android:weightSum="1" android:layout_width="691dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/unknown_val" android:id="@+id/nameTxt"/>
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout6" android:layout_width="fill_parent">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:text="Serial Number: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/serialTxt"
                    android:text="@string/unknown_val"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:text="Version: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/versionTxt"
                    android:text="@string/unknown_val"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout7" android:layout_width="fill_parent">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:text="Channel: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
                <TextView android:layout_height="wrap_content"
                    android:id="@+id/channelTxt"
                    android:text="@string/unknown_val"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:text="Hub Port: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/hubPortTxt"
                    android:text="@string/unknown_val"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:weightSum="1" android:id="@+id/linearLayout2" android:layout_width="597dp" android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textView5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Label: "
                android:layout_height="fill_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/unknown_val"
                android:id="@+id/labelTxt"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsAndData"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/positionVelocityInfo"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/positionInfo"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/positionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/positionTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/velocityInfo"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/velocityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Velocity: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:id="@+id/velocityTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/engagedSection"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/engagedButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Engage"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="#0099cc"
                    android:padding="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/targetPositionSection"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/targetPositionLabel"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="Target Position: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <SeekBar
                        android:id="@+id/targetPositionBar"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:max="180"
                        />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/targetPositionTxt"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Target Position"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accelerationSection"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/accelerationLabel"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="Acceleration: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <SeekBar
                        android:id="@+id/accelerationBar"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:max="1000"
                        />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/accelerationTxt"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/velocityLimitSection"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/velocityLimitLabel"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="Velocity Limit: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <SeekBar
                        android:id="@+id/velocityLimitBar"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:max="1000"
                        />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/velocityLimitTxt"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</ScrollView>